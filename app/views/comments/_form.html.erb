<%= form_with(model: [ @article, @article.comments.build ]) do |form| %>
  <p>
  	<%= if !current_user.nil?
  		form.label :comment
  	end%><br>
  	<%= if !current_user.nil?
  		form.text_area :comment, :class=>'form-control'
  	end%>
  </p>
  <%= if !current_user.nil? 
  	form.hidden_field :user_id, :value => current_user.id 
  end%>
  <p>
  	<%= if !current_user.nil? 
    	form.submit  :class=>'btn btn-sm btn-success'
   	end%> 
  </p>
<% end %>
